<?xml version="1.0" encoding="utf-8"?>
<faml ext="cubecraft_ui">
    <meta>
        <type>image-bg-blur-mask</type>
        <id>cubecraft:single_player_screen</id>
    </meta>
    <elements>
        <textbar id="world_search" limit="20">
            <layout type="origin">
                <layout>[0,30,176,30]</layout>
                <type>left_top</type>
                <border>[4,4,4,4]</border>
            </layout>
            <text type="lang" color="aaaaaa" align="left">singleplayer.search_world</text>
        </textbar>

        <topbar id="top">
            <layout type="flow">
                <type>top</type>
                <layout>[24,0]</layout>
                <border>[0,0,0,0]</border>
            </layout>
            <text type="lang" color="ffffff" align="left">singleplayer.title</text>
        </topbar>
        <button id="join_world" style="ore_ui">
            <layout type="origin">
                <layout>[0,-34,176,30]</layout>
                <type>left_bottom</type>
                <border>[4,4,4,4]</border>
            </layout>
            <text type="lang" color="ffffff" align="middle">singleplayer.button.join</text>
        </button>
        <button id="create_world" style="ore_ui">
            <layout type="origin">
                <layout>[0,-4,88,30]</layout>
                <type>left_bottom</type>
                <border>[4,4,4,4]</border>
            </layout>
            <text type="lang" color="ffffff" align="middle">singleplayer.button.create</text>
        </button>
        <button id="delete_world" style="ore_ui">
            <layout type="origin">
                <layout>[88,-4,88,30]</layout>
                <type>left_bottom</type>
                <border>[4,4,4,4]</border>
            </layout>
            <text type="lang" color="ffffff" align="middle">singleplayer.button.delete</text>
        </button>
        <panel id="world_search_bg">
            <layout type="origin">
                <layout>[0,24,180,2147483600]</layout>
                <type>left_top</type>
                <border>[0,0,0,0]</border>
            </layout>
        </panel>

        <circlewaitinganimation id="wait">
            <layout type="origin">
                <layout>[0,16,16,16]</layout>
                <type>left-top</type>
                <border>[4,4,4,4]</border>
            </layout>
        </circlewaitinganimation>
    </elements>
</faml>