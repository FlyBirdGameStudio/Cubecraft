<?xml version="1.0" encoding="utf-8" ?>
<faml ext="cubecraft_ui">
    <meta>
        <type>image-bg</type>
        <id>cubecraft:title_screen</id>
    </meta>
    <elements>
        <button id="button_singleplayer">
            <layout>{
                    "type": "origin", "layout": [0,-10,300,30],
                    "meta": "middle_middle", "layer": 0,"border":[0,0,4,4]
            }</layout>
            <text type="lang" color="ffffff" align="middle">title_screen.button.singleplayer</text>
        </button>
        <button id="button_multiplayer">
            <layout>{
                "type": "origin", "layout": [0,20,300,30],
                "meta": "middle_middle", "layer": 0,"border":[0,0,4,4]
                }</layout>
            <text type="lang" color="ffffff" align="middle">title_screen.button.multiplayer</text>
        </button>
        <button id="button_option">
            <layout>{
                "type": "origin", "layout": [-75,50,150,30],
                "meta": "middle_middle", "layer": 0,"border":[0,4,4,4]
                }</layout>
            <text type="lang" color="ffffff" align="middle">title_screen.button.setting</text>
        </button>
        <button id="button_quit">
            <layout>{
                "type": "origin", "layout": [75,50,150,30],
                "meta": "middle_middle", "layer": 0,"border":[4,4,4,4]
            }</layout>
            <text type="lang" color="ffffff" align="middle">title_screen.button.quit</text>
        </button>
        <label id="copyright">
            <layout>{
                "type": "origin", "layout": [-2,-2,0,8],
                "meta": "right_bottom", "layer": 0
            }</layout>
            <text type="raw" color="ffffff" align="right">Â©FlyBirdStudio2015-2022</text>
        </label>
        <label id="version_string">
            <layout>{
                "type": "origin", "layout": [2,-2,0,8],
                "meta": "left_bottom", "layer": 0
                }</layout>
            <text type="lang" color="ffffff" align="left">title_screen.version</text>
        </label>
        <label id="auth_string">
            <layout>{
                "type": "origin", "layout": [2,-12,0,8],
                "meta": "left_bottom", "layer": 0
                }</layout>
            <text type="lang" color="ffffff" align="left">title_screen.auth</text>
        </label>
        <image id="logo" img="/resource/textures/gui/logo.png" h-clip="middle" v-clip="middle">
            <layout>{
                "type": "origin", "layout": [0,-80,320,80],
                "meta": "middle_middle", "layer": 0
                }</layout>
        </image>
        <splash id="splash" rotation="-20" bobbing="true">
            <layout>{
                "type": "origin", "layout": [115,-80,0,0],
                "meta": "middle_middle", "layer": -1
                }</layout>
            <text type="random" color="efff00" align="middle">/resource/text/splash.json</text>
        </splash>
    </elements>
</faml>