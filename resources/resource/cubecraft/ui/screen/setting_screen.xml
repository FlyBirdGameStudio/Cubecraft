<?xml version="1.0" encoding="utf-8" ?>
<faml ext="cubecraft_ui">
    <meta>
        <type>image-bg</type>
        <id>cubecraft:setting_screen</id>
    </meta>
    <elements>
        <topbar id="top">
            <layout type="flow">
                <type>top</type>
                <layout>[24,0]</layout>
                <border>[0,0,0,0]</border>
            </layout>
            <text type="lang" color="ffffff" align="left">option.title</text>
        </topbar>


        <menu id="menu" target="frame">
            <layout type="viewport">
                <layout>[0,20,0,100]</layout>
                <border>[0,0,16,0]</border>
            </layout>
            <item id="menu_video" bind="video">
                <icon>/resource/textures/icon/monitor.png</icon>
                <text type="lang" color="ffffff" align="middle">option.button.video</text>
            </item>
            <item id="menu_audio" bind="audio">
                <icon>/resource/textures/icon/monitor.png</icon>
                <text type="lang" color="ffffff" align="middle">option.button.video</text>
            </item>
            <item id="menu_control" bind="control">
                <icon>/resource/textures/icon/monitor.png</icon>
                <text type="lang" color="ffffff" align="middle">option.button.video</text>
            </item>
            <item id="menu_language" bind="language">
                <icon>/resource/textures/icon/monitor.png</icon>
                <text type="lang" color="ffffff" align="middle">option.button.video</text>
            </item>
        </menu>
        <multipage id="frame">
            <layout type="viewport">
                <layout>[20,100,0,100]</layout>
                <border>[0,0,24,0]</border>
            </layout>
            <pages>
                <page id="video">
                    <scrollpane id="main">
                        <childs>
                            <title id="main">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,0]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video</text>
                            </title>

                            <!--terrain-->
                            <split id="terrain">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,16]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="middle">option.video.terrain</text>
                            </split>
                            <slider id="render_distance" min="2" max="32">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,32]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.terrain.distance</text>
                            </slider>
                            <slider id="render_distance_far" min="4" max="128">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,48]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.terrain.distance_far</text>
                            </slider>
                            <check id="classic_lighting">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,64]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.terrain.use_classic_lighting</text>
                            </check>
                            <check id="smooth_lighting">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,80]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.terrain.use_smooth_lighting</text>
                            </check>

                            <!--entity-->
                            <split id="entity">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,96]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="middle">option.video.entity</text>
                            </split>
                            <slider id="entity_distance" min="2" max="512">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,112]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.entity.distance</text>
                            </slider>
                            <slider id="particle_distance" min="2" max="512">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,128]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.entity.particle_distance</text>
                            </slider>
                            <check id="hq_particle">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,144]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="left">option.video.entity.hq_particle</text>
                            </check>

                            <!--environment-->
                            <split id="env">
                                <layout type="flow">
                                    <type>top</type>
                                    <layout>[16,160]</layout>
                                    <border>[0,0,0,0]</border>
                                </layout>
                                <text type="lang" color="ffffff" align="middle">option.video.environment</text>
                            </split>
                        </childs>
                    </scrollpane>
                </page>
                <page id="resource">
                    <scrollpane>
                        <childs>

                        </childs>
                    </scrollpane>
                </page>
                <page id="audio">
                    <scrollpane>
                        <childs>

                        </childs>
                    </scrollpane>
                </page>
                <page id="control">
                    <scrollpane>
                        <childs>

                        </childs>
                    </scrollpane>
                </page>
                <page id="language">
                    <scrollpane>
                        <childs>

                        </childs>
                    </scrollpane>
                </page>
                <page id="about">
                    <scrollpane>
                        <childs>

                        </childs>
                    </scrollpane>
                </page>
            </pages>
        </multipage>
    </elements>
</faml>